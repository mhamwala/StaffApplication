@model ThreeAmigosProduct.Services.ReviewDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Hide Review?</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerID" />
            <input type="hidden" asp-for="Comments" />
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" asp-for="Rating" />
            <div class="form-group">
                <label asp-for="Visible" class="control-label"></label>
                <input asp-for="Visible" class="form-control" />
                <span asp-validation-for="Visible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hide Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Reviews">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
